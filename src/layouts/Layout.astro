---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		  <header>
			<div class="top-header container">
				<img src="https://http2.mlstatic.com/frontend-assets/ml-web-navigation/ui-navigation/6.6.73/mercadolibre/logo_large_25years_v2.png ">
				<div class="input">
                    <input placeholder="Escribe algo y encuentra" />
              <button>
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
					<path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
				  </svg>
				  
			  </button>
				</div>
				<p>Publicidad</p>
			</div>
		
		</header> 
		<div class="banner">
		</div>

			<div class="cards container"> 

			<div class="card"> 
				1
			</div>
			<div class="card" >
				2
			</div>
			<div class="card" >
				4
			</div>
			<div class="card" >
				5
			</div>
			<div class="card" >
				6
			</div>
			</div>

		</header>
		<!-- <slot /> -->
	</body>
</html>
<style>

html, body{
	padding: 0;
	margin: 0;
	background-color: rgb(239, 233, 233) ;
}
header {
		height: 80px;
		background: rgb(250, 250, 21);
		padding-top: 12px;
	}

	header img{
		width: 120px;
	}

	 header input{
		box-sizing: border-box;
		display: : inline;
		width: 80%;
        padding: 10px 8px;
		border-top-left-radius: 3px;
		border-bottom-left-radius: 3px;
		/* border: 1px solid rgb(223, 220, 220); */
		height:36px;
		border: none;
		outline: none;	
  
	 }

	 header button{
     display: inline;
	 width: 32px;
	 border: none; 
	background:#fff;
	height: 36px;
	border-top-right-radius: 3px;
	border-bottom-right-radius: 3px;

	 }

	 
	 .input{
		display: flex;
		align-items: center;
	 }


 .banner{
	height: 280px;
	background: linear-gradient( to bottom, rgb(250, 250, 21) 60%, rgb(239, 233, 233) 100%);
}



.container{
	max-width: 1200px;
	margin: 0 auto;

}
.cards {
	gap: 10px;
	display: flex;
	/* column-count: 6; */
	margin-top: -80px ;
	height: 240px;

}

.card {
     flex-grow: 1;
	background-color: #fff ;
	border-radius:  6px;

}
.top-header {
	column-count: 3;

}


</style>

